{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignore": [
			"**/node_modules/**",
			"**/.next/**",
			"**/.vercel/**",
			"**/out/**",
			"**/public/**",
			"**/coverage/**",
			"**/dist/**",
			"**/build/**",
			"**/tmp/**",
			"**/temp/**",
			"**/vendor/**",
			"**/dll/**",
			"**/bower_components",
			"**/_openapi/**",
			"**/globals.css"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
